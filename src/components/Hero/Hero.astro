---
import Button from "@/components/starwind/button/Button.astro";
import { Image } from "astro:assets";
import heroImage from "@/assets/gallery/hero.jpg";
---

<section id="hero" class="relative min-h-screen w-full overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={heroImage}
      alt="Professional cleaning service background"
      class="w-full h-full object-cover object-center"
      loading="eager"
      format="webp"
    />
  </div>
  <!-- Background overlays -->
  <!-- <div
    class="absolute inset-0 bg-gradient-to-br from-blue-600/70 via-slate-700/80 to-slate-800/90 z-10"
  >
  </div> -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-amber-200/15 via-orange-200/10 to-yellow-100/8 z-10"
  >
  </div>

  <!-- Hero content -->
  <div
    class="relative z-20 flex items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8"
  >
    <div class="text-center max-w-5xl 2xl:max-w-6xl mx-auto">
      <!-- Main headline -->
      <h1
        class="text-stratus-blue font-bold text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-5xl 2xl:text-8xl leading-tight mb-6 tracking-tight"
        style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7), 1px 1px 2px rgba(0, 0, 0, 0.5);"
      >
        Stratus <span class="text-white">Janitorial</span>
        <!-- <span class="block text-white font-bold"> Cleaning Services </span> -->
        <!-- <span class="block font-semibold mt-2"> You Can Trust </span> -->
      </h1>

      <!-- Description -->
      <p
        class="text-white text-semibold text-base sm:text-sm lg:text-lg 2xl:text-2xl mx-auto mt-4 mb-4 2xl:mt-8 2xl:mb-12 max-w-2xl 2xl:max-w-3xl leading-relaxed"
        style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8), 1px 1px 2px rgba(0, 0, 0, 0.6);"
      >
        Janitorial services tailored to Strata Corporations and multiunit
        buildings
      </p>

      <!-- Trust indicators -->
      <div
        class="hidden md:flex mt-8 2xl:mt-12 flex-col sm:flex-row items-center justify-center gap-8 text-silver-gray"
      >
        <div class="flex items-center gap-2">
          <div
            class="w-6 h-6 rounded-full flex items-center justify-center bg-emerald-green"
          >
            <svg
              class="w-4 h-4 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span
            class="text-white text-sm sm:text-base 2xl:text-lg font-medium"
            style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);"
            >WorkSafe BC compliant</span
          >
        </div>
        <div class="flex items-center gap-2">
          <div
            class="w-6 h-6 rounded-full flex items-center justify-center bg-emerald-green"
          >
            <svg
              class="w-4 h-4 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span
            class="text-white text-sm sm:text-base 2xl:text-lg font-medium"
            style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);"
          >
            5 million liability insurance</span
          >
        </div>
        <div class="flex items-center gap-2">
          <div
            class="w-6 h-6 rounded-full flex items-center justify-center bg-emerald-green"
          >
            <svg
              class="w-4 h-4 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span
            class="text-white text-sm sm:text-base 2xl:text-lg font-medium"
            style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);"
            >APPA cleaning standards</span
          >
        </div>
        <div class="flex items-center gap-2">
          <div
            class="w-6 h-6 rounded-full flex items-center justify-center bg-emerald-green"
          >
            <svg
              class="w-4 h-4 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span
            class="text-white text-sm sm:text-base 2xl:text-lg font-medium"
            style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);"
            >WHMIS certified janitors</span
          >
        </div>
      </div>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center mt-6 2xl:mt-12"
      >
        <Button
          variant="primary"
          size="lg"
          href="#contact"
          class="hero-cta text-base 2xl:text-lg min-w-[200px] shadow-lg"
        >
          Get Free Estimate
        </Button>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-white/10 to-transparent z-10"
  >
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce"
  >
    <svg
      class="w-6 h-6 text-white/70"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .hero-cta:hover {
    background-color: var(--emerald-green) !important;
  }
</style>
