---
import ValueCard from "@/components/OurValues/ValueCard.astro";
---

<section id="values" class="w-full bg-gray-50 py-12 sm:py-20 lg:py-24 xl:py-28">
  <div class="max-w-7xl 2xl:max-w-[100rem] mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Layout: Title Left, Cards Right -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 xl:gap-16">
      <!-- Left Side: Title Section -->
      <div class="lg:col-span-4 flex flex-col justify-start">
        <!-- Section Badge -->
        <div class="relative w-fit mb-6">
          <p class="text-2xl leading-tight mb-4 font-bold">
            Our Core Values
            <span class="h-[2px] w-full bg-stratus-blue block mt-2"></span>
          </p>
        </div>

        <!-- Main Title -->
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl leading-tight mb-6 font-bold"
        >
          Built on
          <span class="block text-stratus-blue font-bold">
            Trust & Excellence
          </span>
        </h2>
      </div>

      <!-- Right Side: Value Cards Grid -->
      <div class="lg:col-span-8">
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-6 gap-6 lg:gap-8 auto-rows-fr xl:[&>*:nth-child(1)]:col-span-2 xl:[&>*:nth-child(2)]:col-span-2 xl:[&>*:nth-child(3)]:col-span-2 xl:[&>*:nth-child(4)]:col-span-2 xl:[&>*:nth-child(4)]:col-start-2 xl:[&>*:nth-child(5)]:col-span-2 xl:[&>*:nth-child(5)]:col-start-4"
        >
          <ValueCard
            number="01"
            title="Excellence in Service"
            description="We don't just clean; we perfect every detail to maintain spaces that shine."
          />

          <ValueCard
            number="02"
            title="Integrity and Trust"
            description="Our clients count on us because we operate with honesty, transparency, and respect."
          />

          <ValueCard
            number="03"
            title="Reliability"
            description="We deliver consistent results, on time, every time."
          />

          <ValueCard
            number="04"
            title="Community Care"
            description="We believe in fostering healthier, happier living spaces for residents."
          />

          <ValueCard
            number="05"
            title="Innovation and Sustainability"
            description="We adopt modern techniques and eco-friendly solutions to protect both people and the environment."
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @import "tailwindcss/theme" theme(reference);
  @import "@/styles/tailwind-theme.css" theme(reference);
</style>
