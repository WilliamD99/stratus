---
export interface Props {
  number: string;
  title: string;
  description: string;
  variant?: "primary" | "secondary" | "accent";
}

const { number, title, description, variant = "primary" } = Astro.props;

const variantClasses = {
  primary: {
    border: "rgb(46, 58, 70)",
    badge: "bg-stratus-blue",
  },
  secondary: {
    border: "rgb(46, 58, 70)",
    badge: "bg-slate-gray",
  },
  accent: {
    border: "rgb(46, 58, 70)",
    badge: "bg-emerald-green",
  },
  background: "rgb(46, 58, 70)",
};

const currentVariant = variantClasses[variant];
---

<div class="h-full">
  <div
    class={`bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:-translate-y-1 md:border-l-4 ${currentVariant.border} h-full flex flex-col`}
  >
    <div class="flex flex-col items-start space-x-4 flex-grow">
      <div class="flex-shrink-0 mb-20">
        <span
          class={`inline-flex items-center justify-center w-12 h-12 rounded-full bg-slate-600 text-white font-bold text-lg`}
        >
          {number}
        </span>
      </div>
      <div class="flex-1 flex flex-col">
        <h3 class="stratus-heading text-xl font-bold text-slate-gray mb-3">
          {title}
        </h3>
        <p class="stratus-body text-slate-gray leading-relaxed flex-grow">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  @import "tailwindcss/theme" theme(reference);
  @import "@/styles/tailwind-theme.css" theme(reference);
</style>
