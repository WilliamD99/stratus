---
import siteData from "@/config/siteData.json";
import navConfig from "@/config/navData.json";
import logo from "@/assets/stratus_with_text.png";
import { Image } from "astro:assets";
---

<footer class="py-6 mt-auto bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- First Column: Logo + Company Name + Description -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <div class="relative h-24 w-auto md:h-36">
            <Image
              src={logo}
              alt={`${siteData.name} logo`}
              loading="lazy"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
        <!-- <p class="text-sm leading-relaxed max-w-xs" style="color: #BDC3C7">
          {siteData.description}
        </p> -->
      </div>

      <!-- Second Column: Address + Contact -->
      <div class="space-y-4 md:text-right flex flex-col justify-end">
        <h3 class="text-lg text-black font-semibold">Contact Information</h3>
        <div class="space-y-3 text-sm text-black/90">
          <!-- <div class="flex items-start md:justify-end space-x-2">
            <div class="w-4 flex justify-end">
              <svg
                class="w-4 h-4 mt-0.5 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="text-right">
              <div>61 - 5510 Admiral Way</div>
              <div>Delta, BC V4K0C3</div>
            </div>
          </div> -->

          <div class="flex items-center md:justify-end space-x-2">
            <div class="w-4 flex justify-end">
              <svg
                class="w-4 h-4 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
            </div>
            <a
              href="mailto:info@stratusjanitorial.com"
              class="hover:text-white transition-colors duration-200"
            >
              info@stratusjanitorial.com
            </a>
          </div>
        </div>
      </div>

      <!-- Third Column: Navigation Links -->
      <div class="space-y-4 flex flex-col justify-end">
        <h3 class="text-lg text-black font-semibold md:text-right">
          Quick Links
        </h3>
        <nav class="space-y-2">
          {
            navConfig.map((navItem) => (
              <a
                href={navItem.link}
                class="block text-sm text-black/90 hover:text-emerald-green transition-colors duration-200 md:text-right"
                {...(navItem.newTab && {
                  target: "_blank",
                  rel: "noopener noreferrer",
                })}
              >
                {navItem.text}
              </a>
            ))
          }
          <!-- Privacy Policy -->
        </nav>
      </div>
    </div>

    <!-- Bottom Section: Copyright -->
    <div class="border-t mt-8 pt-6" style="border-color: rgba(0, 0, 0, 0.2)">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-2 md:space-y-0"
      >
        <p class="text-sm text-right text-black/90">
          Â© {new Date().getFullYear()}
          {siteData.name}. All rights reserved.
        </p>
        <div class="flex space-x-6 text-sm text-black/90">
          <span class="">
            Built and Maintained by <a
              href="https://github.com/WilliamD99"
              class="font-semibold hover:text-emerald-green transition-colors duration-200"
              >Will Doan</a
            >
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
